<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.productDetail.fragments.ProductDescriptionFragment">

    <LinearLayout
        android:padding="@dimen/margin_8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.navin.melalwallet.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/margin_8"
            android:text="@string/short_description" />

        <com.navin.melalwallet.utils.CustomTextView
            android:layout_width="match_parent"
            android:id="@+id/txt_short_description"
            android:layout_height="wrap_content"
            />



        <com.navin.melalwallet.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/margin_8"
            android:text="@string/full_description" />

        <com.navin.melalwallet.utils.CustomTextView
            android:layout_width="match_parent"
            android:id="@+id/txt_full_description"
            android:layout_height="wrap_content"
            />




    </LinearLayout>



</ScrollView>